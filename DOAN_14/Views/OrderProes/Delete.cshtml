@model DOAN_14.Models.OrderPro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>XÓA ĐƠN HÀNG</h2>

<h3>Bạn có chắc là xóa ĐƠN HÀNG này không?</h3>
<div>
    <h4>OrderPro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày giao hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOrder)
        </dd>

        <dt>
            Địa chỉ giao hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressDeliverry)
        </dd>

        <dt>
            Khách hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.NameCus)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" style="background: rgb(128, 0, 0); color: white" /> |
            @Html.ActionLink("Quay lại DANH SÁCH CÁC ĐƠN HÀNG", "Index")
        </div>
    }
</div>

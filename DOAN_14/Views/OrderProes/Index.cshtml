@model IEnumerable<DOAN_14.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>DANH SÁCH CÁC ĐƠN HÀNG</h2>

<p>
    @Html.ActionLink("Tạo đơn hàng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ngày giao hàng
        </th>
        <th>
            Địa chỉ giao hàng
        </th>
        <th>
            Khách hàng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressDeliverry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.NameCus)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

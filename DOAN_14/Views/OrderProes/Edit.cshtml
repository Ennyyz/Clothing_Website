@model DOAN_14.Models.OrderPro

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CẬP NHẬT ĐƠN HÀNG</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>OrderPro</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>
                    Ngày giao hàng
                </b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOrder, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOrder, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>
                    Mã khách hàng
                </b>
            </div>
            <div class="col-md-10">
                @Html.DropDownList("IDCus", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDCus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>
                    Địa chỉ giao hàng
                </b>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AddressDeliverry, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AddressDeliverry, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" style="background: rgb(0, 0, 139); color: white " />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại DANH SÁCH CÁC ĐƠN HÀNG", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
